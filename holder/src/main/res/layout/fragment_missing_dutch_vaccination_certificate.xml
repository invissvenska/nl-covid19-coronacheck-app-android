<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <nl.rijksoverheid.ctr.design.views.AccessibilityHeaderWidget
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:text="@string/missing_dutch_certificate_title"
            android:textAppearance="@style/App.TextAppearance.MaterialComponents.Headline5.Montserrat" />

        <nl.rijksoverheid.ctr.design.views.HtmlTextViewWidget
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/App.TextAppearance.MaterialComponents.Body1"
            app:enableHtmlLinks="true"
            app:htmlText="@string/missing_dutch_certificate_introduction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
